@page
@model FlightBookingFinal.Pages.Airlines.CreateModel
@{
}
<br />
<h2>New Airline</h2>
@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissable fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
    </div>
}

<form method="POST">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Airline Name</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="Name" value="@Model.airLInfo.airlineName" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Airline Code</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="Code" value="@Model.airLInfo.airlineCode" />
        </div>
    </div>


    @if (Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="cal-sm-9">
                <div class="alert alert-success alert-dismissable fade show" role="alert">
                    <strong>@Model.successMessage</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
                </div>
            </div>
        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grif">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class=" offsetcol-sm-3 col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/" role="=button">Cancel</a>
        </div>
    </div>
    </div>
</form>